{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "strict": true,
    "noImplicitAny": true,

    "baseUrl": "./src",

    "experimentalDecorators": true,
    "useDefineForClassFields": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"]
}
